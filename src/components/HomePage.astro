---
import Navigation from './sections/Navigation.astro';
import Hero from './sections/Hero.astro';
import Accommodation from './sections/Accommodation.astro';
import Amenities from './sections/Amenities.astro';
import Garden from './sections/Garden.astro';
import Location from './sections/Location.astro';
import Activities from './sections/Activities.astro';
import Availability from './sections/Availability.astro';
import BookingInfo from './sections/BookingInfo.astro';
import Contact from './sections/Contact.astro';

interface Props {
  locale: string;
  currentPath: string;
}
const { locale, currentPath } = Astro.props as Props;

import { getTranslations } from '../utils/i18n.js';
const t = getTranslations(locale);
---

<Navigation locale={locale} currentPath={currentPath} t={t} />
<Hero locale={locale} t={t} />
<Accommodation t={t} locale={locale} />
<Amenities t={t} locale={locale} />
<Garden t={t} locale={locale} />
<Location t={t} locale={locale} />
<Activities t={t} locale={locale} />
<Availability t={t} locale={locale} />
<BookingInfo t={t} locale={locale} />
<Contact t={t} locale={locale} />

<style>
  /* Additional custom styles */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.6s ease-in-out;
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out;
  }
</style>
