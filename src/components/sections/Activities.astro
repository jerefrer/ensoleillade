---
import images from "../../data/images.yml";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Activities Section -->
<section id="activities" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-warm-50 via-white to-sage-50"
  >
  </div>
  <div
    class="absolute top-1/4 left-0 w-96 h-96 bg-warm-300/10 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/3 right-0 w-80 h-80 bg-sage-300/10 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
      >
        {t.activities.title}
      </h2>
      <p class="text-lg text-forest-700 max-w-xl mx-auto leading-relaxed">
        {t.activities.description}
      </p>
    </div>

    <!-- Featured Activities Grid -->
    <div
      class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20 animate-on-scroll"
    >
      <!-- Lascaux Caves -->
      <div class="group">
        <div
          class="relative bg-gradient-to-br from-white via-sage-50/50 to-transparent rounded-2xl p-6 border border-sage-200 shadow-soft card-hover"
        >
          <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
            <img
              src={images.activities.lascaux.image}
              alt={locale === "fr" ? images.activities.lascaux.alt.fr : images.activities.lascaux.alt.en}
              class="w-full h-full object-cover"
            />
          </div>

          <h4
            class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-sage-600 transition-colors"
          >
            {t.location.lascaux_alt}
          </h4>
          <p class="text-forest-600 text-sm">
            {t.location.lascaux_desc}
          </p>
        </div>
      </div>

      <!-- Canoeing -->
      <div class="group">
        <div
          class="relative bg-gradient-to-br from-white via-warm-50/50 to-transparent rounded-2xl p-6 border border-warm-200 shadow-soft card-hover"
        >
          <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
            <img
              src={images.activities.canoeing.image}
              alt={locale === "fr" ? images.activities.canoeing.alt.fr : images.activities.canoeing.alt.en}
              class="w-full h-full object-cover"
            />
          </div>

          <h4
            class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-warm-600 transition-colors"
          >
            {t.location.canoeing_alt}
          </h4>
          <p class="text-forest-600 text-sm">
            {t.location.canoeing_desc}
          </p>
        </div>
      </div>

      <!-- Castles & Gardens -->
      <div class="group">
        <div
          class="relative bg-gradient-to-br from-white via-forest-50/50 to-transparent rounded-2xl p-6 border border-forest-200 shadow-soft card-hover"
        >
          <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
            <img
              src={images.activities.castles.image}
              alt={locale === "fr" ? images.activities.castles.alt.fr : images.activities.castles.alt.en}
