---
interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Activities Section -->
<section id="activities" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-warm-50 via-white to-sage-50"
  >
  </div>
  <div
    class="absolute top-1/4 left-0 w-96 h-96 bg-warm-300/10 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/3 right-0 w-80 h-80 bg-sage-300/10 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
      >
        {t.activities.title}
      </h2>
      <p class="text-lg text-forest-700 max-w-xl mx-auto leading-relaxed">
        {t.activities.description}
      </p>
    </div>

    <!-- Activities Grid -->
    <div class="flex flex-wrap justify-center gap-6 animate-on-scroll">
      <div class="group text-center w-60 my-5">
        <div
          class="w-16 h-16 bg-sage-100 rounded-2xl flex items-center justify-center mx-auto mb-3 group-hover:bg-sage-200 group-hover:scale-110 transition-all duration-300"
        >
          <span class="text-sage-600 text-2xl">🦕</span>
        </div>
        <h5 class="font-medium text-forest-800 text-sm mb-2">
          {t.activities.items.prehistoric.title}
        </h5>
        {
          t.activities.items.prehistoric.items &&
            t.activities.items.prehistoric.items.length > 0 && (
              <ul class="text-xs text-forest-600 leading-relaxed space-y-1">
                {t.activities.items.prehistoric.items.map(
                  (item: string) => (
                    <li>{item}</li>
                  )
                )}
              </ul>
            )
        }
      </div>

      <div class="group text-center w-60 my-5">
        <div
          class="w-16 h-16 bg-warm-100 rounded-2xl flex items-center justify-center mx-auto mb-3 group-hover:bg-warm-200 group-hover:scale-110 transition-all duration-300"
        >
          <span class="text-warm-600 text-2xl">🌺</span>
        </div>
        <h5 class="font-medium text-forest-800 text-sm mb-2">
