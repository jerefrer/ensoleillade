    <h2 class="text-4xl font-serif font-bold mb-6">
      {t.contact.title}
    </h2>
    <p class="text-xl mb-12 opacity-90">
      {t.contact.subtitle}
    </p>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">üìû</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.phone}</h3>
        <a href="tel:+33123456789" class="text-warm-200 hover:text-warm-100 transition-colors">
          +33 1 23 45 67 89
        </a>
        <p class="text-sm opacity-75 mt-2">{t.contact.response}</p>
      </div>
      
      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">‚úâÔ∏è</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.email}</h3>
        <a href="mailto:contact@ensoleillade.com" class="text-warm-200 hover:text-warm-100 transition-colors">
          contact@ensoleillade.com
        </a>
        <p class="text-sm opacity-75 mt-2">{t.contact.direct}</p>
      </div>
    </div>
  </div>
</section>
