---
interface Props { 
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---
<section id="contact" class="py-20 bg-forest-700 text-white">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-serif font-bold mb-6">
      {t.contact.title}
    </h2>
    <p class="text-xl mb-12 opacity-90">
      {t.contact.subtitle}
    </p>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto mb-12">
      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">üìû</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.phone}</h3>
        <a href={`tel:${t.contact.phone_number.replace(/\s/g, '')}`} class="text-warm-200 hover:text-warm-100 transition-colors">
          {t.contact.phone_number}
        </a>
        <p class="text-sm opacity-75 mt-2">{t.contact.response}</p>
      </div>
      
      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">‚úâÔ∏è</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.email}</h3>
        <a href={`mailto:${t.contact.email_address}`} class="text-warm-200 hover:text-warm-100 transition-colors">
          {t.contact.email_address}
        </a>
        <p class="text-sm opacity-75 mt-2">{t.contact.direct}</p>
      </div>
    </div>

    <!-- Rental Contract Download -->
    <div class="text-center">
      <a
        href="/Contrat de location saisonni√®re.pdf"
        download
        class="inline-flex items-center space-x-3 px-6 py-3 bg-white border-2 border-warm-300 text-forest-700 rounded-xl font-semibold hover:bg-warm-50 hover:border-warm-400 transition-all duration-300 shadow-soft"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span>
          {t.accommodation.download_contract}
        </span>
      </a>
    </div>
  </div>
</section>
