---
interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<section id="contact" class="py-20 bg-forest-700 text-white">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-serif font-bold mb-6">
      {t.contact.title}
    </h2>
    <p class="text-xl mb-12 opacity-90">
      {t.contact.subtitle}
    </p>

    <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto mb-8">
      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">üìû</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.phone}</h3>
        <a
          href={`tel:${t.contact.phone_number.replace(/\s/g, "")}`}
          class="text-warm-200 hover:text-warm-100 transition-colors text-lg"
        >
          {t.contact.phone_number}
        </a>
      </div>

      <div class="bg-forest-600 p-8 rounded-lg border border-forest-500/20">
        <div class="text-3xl mb-4">‚úâÔ∏è</div>
        <h3 class="text-xl font-semibold mb-2">{t.contact.email}</h3>
        <a
          href={`mailto:${t.contact.email_address}`}
          class="text-warm-200 hover:text-warm-100 transition-colors break-all"
        >
          {t.contact.email_address}
        </a>
      </div>
    </div>

    <!-- Pricing & Minimum Stay -->
    <div class="flex flex-wrap justify-center gap-4 mb-8">
      <div
        class="inline-flex items-center px-6 py-3 bg-blue-50/90 backdrop-blur-sm border-2 border-blue-200 rounded-xl shadow-sm"
      >
        <span class="font-semibold text-blue-900">
          65‚Ç¨{locale === "fr" ? "/nuit" : "/night"}
        </span>
        <span class="text-sm text-blue-600/70 pl-1">
          {locale === "fr" ? "+ taxe de s√©jour" : "+ tourist tax"}</span
        >
      </div>
      
      <div
        class="inline-flex items-center px-6 py-3 bg-white/90 backdrop-blur-sm border-2 border-forest-200 rounded-xl shadow-sm"
      >
        <span class="text-forest-600 mr-2">üìÖ</span>
        <span class="font-semibold text-forest-800">
          {locale === "fr" ? "3 nuits minimum" : "3 nights minimum"}
        </span>
      </div>
    </div>

    <!-- ANCV Badge -->
    <div class="flex justify-center mb-8">
      <div
        class="inline-flex items-center px-5 py-3 bg-gradient-to-r from-blue-50 to-blue-100 border-2 border-blue-200 rounded-xl shadow-sm"
      >
        <div class="w-16 h-12 mr-3 flex items-center justify-center">
          <img
            src="/cheque-vacance-logo.webp"
            alt="ANCV Ch√®ques Vacances"
            class="w-full object-contain rounded"
          />
        </div>
        <div>
          <div class="font-bold text-blue-900 text-sm">
            {t.amenities.ancv.title}
          </div>
          <div class="text-left text-xs text-blue-700">
            {t.amenities.ancv.accepted}
          </div>
        </div>
      </div>
    </div>

    <!-- Rental Contract Download -->
    <div class="text-center">
      <a
        href="/Contrat de location saisonni√®re.pdf"
        download
        class="inline-flex items-center space-x-2 px-4 py-2 text-warm-200 hover:text-warm-100 transition-colors text-sm underline underline-offset-4"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
        <span>
          {t.accommodation.download_contract}
        </span>
      </a>
    </div>
  </div>
</section>
