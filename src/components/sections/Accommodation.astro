---
import images from "../../data/images.yml";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Modern Visual Showcase Section -->
<section id="accommodation" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-white via-sage-50/30 to-warm-50/30"
  >
  </div>
  <div
    class="absolute top-1/4 left-0 w-72 h-72 bg-sage-300/20 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-0 w-96 h-96 bg-warm-300/20 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
      >
        {t.accommodation.title}
      </h2>

      <!-- Key Stats Cards -->
      <div class="flex flex-wrap justify-center gap-6 mt-8">
        <div
          class="bg-white/80 backdrop-blur-sm border border-sage-200 px-6 py-4 rounded-2xl shadow-sage"
        >
          <div class="flex items-center space-x-3">
            <div
              class="w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-sage-600 text-lg">üìê</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">
                {t.accommodation.size}
              </div>
              <div class="text-sm text-sage-600">
                {locale === "fr" ? "Surface totale" : "Total area"}
              </div>
            </div>
          </div>
        </div>

        <div
          class="bg-white/80 backdrop-blur-sm border border-warm-200 px-6 py-4 rounded-2xl shadow-warm"
        >
          <div class="flex items-center space-x-3">
            <div
              class="w-12 h-12 bg-warm-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-warm-600 text-lg">üë•</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">
                {t.accommodation.capacity}
              </div>
              <div class="text-sm text-warm-600">
                {locale === "fr" ? "Capacit√© d'accueil" : "Guest capacity"}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Visual Gallery Grid -->
    <div class="mb-20 animate-on-scroll">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4 md:items-end">
        <!-- Large Featured Image (2 columns) -->
        <div class="md:col-span-2">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover">
            <img
              src={images.accommodation.terrace[0]}
              alt={locale === "fr" ? "Terrasse" : "Terrace"}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Single Right Image -->
        <div class="md:col-span-1">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover">
            <img
              src={images.gallery[0].image}
              alt={
                locale === "fr"
                  ? images.gallery[0].alt_fr
                  : images.gallery[0].alt_en
              }
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>

      <!-- Bottom Row: 4 Images -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {
          images.accommodation.interior[1] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.accommodation.interior[1]}
                alt={locale === "fr" ? "Espace nuit" : "Sleeping area"}
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.gallery[1] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.gallery[1].image}
                alt={
                  locale === "fr"
                    ? images.gallery[1].alt_fr
                    : images.gallery[1].alt_en
                }
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.gallery[2] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.gallery[2].image}
                alt={
                  locale === "fr"
                    ? images.gallery[2].alt_fr
                    : images.gallery[2].alt_en
                }
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.accommodation.interior[0] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.accommodation.interior[0]}
                alt={locale === "fr" ? "Int√©rieur du g√Æte" : "Cottage interior"}
                class="w-full h-full object-cover"
              />
            </div>
          )
        }
      </div>
    </div>

    <!-- Practical Information -->
    <div class="grid md:grid-cols-3 gap-6 mb-12 animate-on-scroll">
      <!-- Check-in/out -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-4">
          <span class="text-2xl">üïê</span>
          <h3 class="font-semibold text-forest-800">
            {locale === "fr" ? "Horaires" : "Schedule"}
          </h3>
        </div>
        <div class="space-y-2 text-sm text-forest-700">
          <div>
            <span class="font-medium">{locale === "fr" ? "Arriv√©e :" : "Check-in:"}</span>
            <br />17h00 - 21h00
          </div>
          <div>
            <span class="font-medium">{locale === "fr" ? "D√©part :" : "Check-out:"}</span>
            <br />08h00 - 10h00
          </div>
        </div>
      </div>

      <!-- House Rules -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-4">
          <span class="text-2xl">üìã</span>
          <h3 class="font-semibold text-forest-800">
            {locale === "fr" ? "R√®glement" : "House Rules"}
          </h3>
        </div>
        <div class="space-y-2 text-sm text-forest-700">
          <div class="flex items-start space-x-2">
            <span>üö≠</span>
            <span>{locale === "fr" ? "Non fumeur" : "Non-smoking"}</span>
          </div>
          <div class="flex items-start space-x-2">
            <span>üêæ</span>
            <span>{locale === "fr" ? "Animaux non accept√©s" : "No pets"}</span>
          </div>
          <div class="flex items-start space-x-2">
            <span>üéâ</span>
            <span>{locale === "fr" ? "Soir√©es non autoris√©es" : "No parties"}</span>
          </div>
        </div>
      </div>

      <!-- Eco Construction -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-4">
          <span class="text-2xl">üå±</span>
          <h3 class="font-semibold text-forest-800">
            {locale === "fr" ? "√âcologie" : "Ecology"}
          </h3>
        </div>
        <div class="space-y-2 text-sm text-forest-700">
          <div class="flex items-start space-x-2">
            <span>‚úì</span>
            <span>{locale === "fr" ? "Construction auto-construite" : "Self-built"}</span>
          </div>
          <div class="flex items-start space-x-2">
            <span>‚úì</span>
            <span>{locale === "fr" ? "Mat√©riaux biologiques" : "Organic materials"}</span>
          </div>
          <div class="flex items-start space-x-2">
            <span>‚úì</span>
            <span>{locale === "fr" ? "Phyto√©puration" : "Phytopurification"}</span>
          </div>
          <div class="flex items-start space-x-2">
            <span>‚úì</span>
            <span>{locale === "fr" ? "√âclairage LED" : "LED lighting"}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Special Note about Ducks -->
    <div class="bg-gradient-to-r from-warm-50 to-sage-50 rounded-xl p-6 border border-warm-200 animate-on-scroll">
      <div class="flex items-start space-x-4">
        <span class="text-3xl">ü¶Ü</span>
        <div>
          <h4 class="font-semibold text-forest-800 mb-2">
            {locale === "fr" ? "√Ä propos de nos amis √† plumes" : "About our feathered friends"}
          </h4>
          <p class="text-forest-700 text-sm leading-relaxed">
            {locale === "fr" 
              ? "Nous ne pouvons pas accueillir nos amies les animaux, pr√©sence de 3 canards coureurs indiens en libert√© : Igor, Plume et Cachou. Merci de votre compr√©hension."
              : "We cannot welcome pets due to the presence of 3 free-roaming Indian Runner ducks: Igor, Plume, and Cachou. Thank you for your understanding."}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
