---
import images from '../../data/images.json';

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Modern Visual Showcase Section -->
<section id="accommodation" class="relative py-32 overflow-hidden">
  
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-b from-white via-sage-50/30 to-warm-50/30"></div>
  <div class="absolute top-1/4 left-0 w-72 h-72 bg-sage-300/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/4 right-0 w-96 h-96 bg-warm-300/20 rounded-full blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <div class="inline-flex items-center px-4 py-2 bg-sage-100 rounded-full border border-sage-200 mb-6">
        <span class="text-2xl mr-2">üè†</span>
        <span class="text-sage-700 font-semibold text-sm">
          {locale === 'fr' ? 'Votre H√©bergement' : 'Your Accommodation'}
        </span>
      </div>
      <h2 class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6">
        {t.accommodation.title}
      </h2>
      
      <!-- Key Stats Cards -->
      <div class="flex flex-wrap justify-center gap-6 mt-8">
        <div class="bg-white/80 backdrop-blur-sm border border-sage-200 px-6 py-4 rounded-2xl shadow-sage">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center">
              <span class="text-sage-600 text-lg">üìê</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">{t.accommodation.size}</div>
              <div class="text-sm text-sage-600">{locale === 'fr' ? 'Surface totale' : 'Total area'}</div>
            </div>
          </div>
        </div>
        
        <div class="bg-white/80 backdrop-blur-sm border border-warm-200 px-6 py-4 rounded-2xl shadow-warm">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 bg-warm-100 rounded-xl flex items-center justify-center">
              <span class="text-warm-600 text-lg">üë•</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">{t.accommodation.capacity}</div>
              <div class="text-sm text-warm-600">{locale === 'fr' ? 'Capacit√© d\'accueil' : 'Guest capacity'}</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Visual Gallery Grid -->
    <div class="mb-20">
      
      <!-- Masonry-style Gallery -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-on-scroll">
        
        <!-- Featured Large Image -->
        <div class="md:col-span-2 lg:row-span-2">
          <div class="relative aspect-[4/3] lg:aspect-[3/2] rounded-2xl overflow-hidden shadow-large group card-hover">
            <img 
              src={images.accommodation.interior[0]}
              alt={locale === 'fr' ? 'Int√©rieur du g√Æte' : 'Cottage interior'}
              class="w-full h-full object-cover"
            />
            
            <!-- Overlay Badge -->
            <div class="absolute top-4 right-4 bg-sage-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
              {locale === 'fr' ? 'Principal' : 'Featured'}
            </div>
          </div>
        </div>
        
        <!-- Interior Photos -->
        <div class="space-y-6">
          {images.accommodation.interior[1] && (
            <div class="aspect-square rounded-xl overflow-hidden shadow-soft group card-hover">
              <img 
                src={images.accommodation.interior[1]}
                alt={locale === 'fr' ? 'Espace nuit' : 'Sleeping area'}
                class="w-full h-full object-cover"
              />
            </div>
          )}
          
          {images.accommodation.exterior[0] && (
            <div class="aspect-square rounded-xl overflow-hidden shadow-soft group card-hover">
              <img 
                src={images.accommodation.exterior[0]}
                alt={locale === 'fr' ? 'Ext√©rieur du g√Æte' : 'Cottage exterior'}
                class="w-full h-full object-cover"
              />
            </div>
          )}
        </div>
        
        <!-- Additional Photos Row -->
        <div class="md:col-span-2 lg:col-span-3">
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
            {images.accommodation.terrace[0] && (
              <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
                <img 
                  src={images.accommodation.terrace[0]}
                  alt={locale === 'fr' ? 'Terrasse' : 'Terrace'}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            
            {images.gallery[0] && (
              <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
                <img 
                  src={images.gallery[0].image}
                  alt={locale === 'fr' ? images.gallery[0].alt_fr : images.gallery[0].alt_en}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            
            {images.gallery[1] && (
              <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
                <img 
                  src={images.gallery[1].image}
                  alt={locale === 'fr' ? images.gallery[1].alt_fr : images.gallery[1].alt_en}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            
            {images.gallery[2] && (
              <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
                <img 
                  src={images.gallery[2].image}
                  alt={locale === 'fr' ? images.gallery[2].alt_fr : images.gallery[2].alt_en}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Key Features Highlight -->
    <div class="grid md:grid-cols-2 gap-8 animate-on-scroll">
      
      <!-- Space Details -->
      <div class="bg-gradient-to-br from-white via-sage-50/50 to-transparent rounded-2xl p-8 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-4 mb-6">
          <div class="w-16 h-16 bg-sage-gradient rounded-2xl flex items-center justify-center shadow-sage">
            <span class="text-white text-2xl">üè†</span>
          </div>
          <div>
            <h3 class="text-2xl font-semibold text-forest-800">
              {locale === 'fr' ? 'Espace & Confort' : 'Space & Comfort'}
            </h3>
            <p class="text-sage-600 font-medium">
              {locale === 'fr' ? 'Am√©nagement optimis√©' : 'Optimized layout'}
            </p>
          </div>
        </div>
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <span class="text-sage-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? '19m¬≤ d\'espace de vie' : '19m¬≤ living space'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-sage-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? '18m¬≤ de terrasse couverte' : '18m¬≤ covered terrace'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-sage-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Lit double confortable' : 'Comfortable double bed'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-sage-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Salle de bain privative' : 'Private bathroom'}
            </span>
          </div>
        </div>
      </div>

      <!-- Eco Features -->
      <div class="bg-gradient-to-br from-white via-warm-50/50 to-transparent rounded-2xl p-8 border border-warm-200 shadow-soft">
        <div class="flex items-center space-x-4 mb-6">
          <div class="w-16 h-16 bg-warm-gradient rounded-2xl flex items-center justify-center shadow-warm">
            <span class="text-white text-2xl">üå±</span>
          </div>
          <div>
            <h3 class="text-2xl font-semibold text-forest-800">
              {locale === 'fr' ? 'Construction √âcologique' : 'Eco Construction'}
            </h3>
            <p class="text-warm-600 font-medium">
              {locale === 'fr' ? 'Mat√©riaux naturels' : 'Natural materials'}
            </p>
          </div>
        </div>
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <span class="text-warm-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Isolation laine de bois' : 'Wood wool insulation'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-warm-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Bardage bois local' : 'Local wood cladding'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-warm-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Chauffage √©cologique' : 'Eco-friendly heating'}
            </span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-warm-600">‚úì</span>
            <span class="text-forest-700">
              {locale === 'fr' ? 'Gestion eau durable' : 'Sustainable water'}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
