---
import images from "../../cms-content/images.json";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Simplified Accommodation Section -->
<section id="accommodation" class="relative py-24 bg-white">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2
        class="text-3xl lg:text-4xl font-serif font-bold text-forest-800 mb-4"
      >
        {t.accommodation.title}
      </h2>
      <p class="text-lg text-forest-700 max-w-2xl mx-auto">
        {locale === "fr"
          ? "Une maisonnette en bois de 19m¬≤ avec sa terrasse de 18m¬≤ et son jardin"
          : "A 19m¬≤ wooden cottage with 18m¬≤ terrace and garden"}
      </p>
    </div>

    <!-- Key Info Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-16 animate-on-scroll">
      <div class="bg-sage-50 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">üë•</div>
        <div class="font-semibold text-forest-800">1-2 {locale === "fr" ? "personnes" : "people"}</div>
        <div class="text-sm text-sage-600">{locale === "fr" ? "Capacit√©" : "Capacity"}</div>
      </div>
      <div class="bg-blue-50 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">üí∂</div>
        <div class="font-semibold text-forest-800">65‚Ç¨ / {locale === "fr" ? "nuit" : "night"}</div>
        <div class="text-sm text-sage-600">+ {locale === "fr" ? "taxe de s√©jour" : "tourist tax"}</div>
      </div>
      <div class="bg-warm-50 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">üóìÔ∏è</div>
        <div class="font-semibold text-forest-800">{locale === "fr" ? "3-7 nuits" : "3-7 nights"}</div>
        <div class="text-sm text-sage-600">{locale === "fr" ? "Minimum" : "Minimum stay"}</div>
      </div>
      <div class="bg-sage-50 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">üé´</div>
        <div class="font-semibold text-forest-800">{locale === "fr" ? "Ch√®ques Vacances" : "Holiday Vouchers"}</div>
        <div class="text-sm text-sage-600">ANCV</div>
      </div>
    </div>

    <!-- Visual Gallery Grid -->
    <div class="mb-20 animate-on-scroll">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4 md:items-end">
        <!-- Large Featured Image (2 columns) -->
        <div class="md:col-span-2">
          <div
            class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover"
          >
            <img
              src={images.accommodation.primary}
              alt={locale === "fr"
                ? images.accommodation.primary_alt.fr
                : images.accommodation.primary_alt.en}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Single Right Image -->
        <div class="md:col-span-1">
          <div
            class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover"
          >
            <img
              src={images.accommodation.secondary}
              alt={locale === "fr"
                ? images.accommodation.secondary_alt.fr
                : images.accommodation.secondary_alt.en}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>

      <!-- Bottom Row: 4 Images -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {
          images.accommodation.gallery.map((item, index) => (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={item.image}
                alt={locale === "fr" ? item.alt.fr : item.alt.en}
                class="w-full h-full object-cover"
              />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Ecological Construction Section -->
