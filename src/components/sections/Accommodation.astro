---
import images from "../../data/images.yml";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Modern Visual Showcase Section -->
<section id="accommodation" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-white via-sage-50/30 to-warm-50/30"
  >
  </div>
  <div
    class="absolute top-1/4 left-0 w-72 h-72 bg-sage-300/20 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-0 w-96 h-96 bg-warm-300/20 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
      >
        {t.accommodation.title}
      </h2>

      <!-- Key Stats Cards -->
      <div class="flex flex-wrap justify-center gap-6 mt-8">
        <div
          class="bg-white/80 backdrop-blur-sm border border-sage-200 px-6 py-4 rounded-2xl shadow-sage"
        >
          <div class="flex items-center space-x-3">
            <div
              class="w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-sage-600 text-lg">üìê</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">
                {t.accommodation.size}
              </div>
              <div class="text-sm text-sage-600">
                {t.accommodation.total_area}
              </div>
            </div>
          </div>
        </div>

        <div
          class="bg-white/80 backdrop-blur-sm border border-warm-200 px-6 py-4 rounded-2xl shadow-warm"
        >
          <div class="flex items-center space-x-3">
            <div
              class="w-12 h-12 bg-warm-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-warm-600 text-lg">üë•</span>
            </div>
            <div class="text-left">
              <div class="text-2xl font-bold text-forest-800">
                {t.accommodation.capacity}
              </div>
              <div class="text-sm text-warm-600">
                {t.accommodation.guest_capacity}
              </div>
            </div>
          </div>
        </div>

        <div
          class="bg-white/80 backdrop-blur-sm border border-forest-200 px-6 py-4 rounded-2xl shadow-soft"
        >
          <div class="text-center">
            <div class="text-2xl font-bold text-forest-800">
              {t.accommodation.price_per_night}
            </div>
            <div class="text-sm text-forest-600">
              {t.accommodation.tourist_tax}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Visual Gallery Grid -->
    <div class="mb-20 animate-on-scroll">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4 md:items-end">
        <!-- Large Featured Image (2 columns) -->
        <div class="md:col-span-2">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover">
            <img
              src={images.accommodation.terrace[0]}
              alt={t.accommodation.terrace}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Single Right Image -->
        <div class="md:col-span-1">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large group card-hover">
            <img
              src={images.gallery[0].image}
              alt={
                locale === "fr"
                  ? images.gallery[0].alt_fr
                  : images.gallery[0].alt_en
              }
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>

      <!-- Bottom Row: 4 Images -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {
          images.accommodation.interior[1] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.accommodation.interior[1]}
                alt={t.accommodation.sleeping_area}
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.gallery[1] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.gallery[1].image}
                alt={
                  locale === "fr"
                    ? images.gallery[1].alt_fr
                    : images.gallery[1].alt_en
                }
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.gallery[2] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.gallery[2].image}
                alt={
                  locale === "fr"
                    ? images.gallery[2].alt_fr
                    : images.gallery[2].alt_en
                }
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        {
          images.accommodation.interior[0] && (
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-soft group card-hover">
              <img
                src={images.accommodation.interior[0]}
                alt={t.accommodation.cottage_interior}
                class="w-full h-full object-cover"
              />
            </div>
          )
        }
      </div>
    </div>

    <!-- Practical Information -->
    <div class="grid md:grid-cols-3 gap-6 mb-12 animate-on-scroll">
      <!-- Check-in/out -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <span class="text-2xl">üïê</span>
          </div>
          <h3 class="font-semibold text-lg text-forest-800">
            {t.accommodation.schedule}
          </h3>
        </div>
        <div class="space-y-4 text-forest-700">
          <div>
            <div class="font-semibold text-base mb-1">{t.accommodation.checkin}</div>
            <div class="text-base">17h00 - 21h00</div>
          </div>
          <div>
            <div class="font-semibold text-base mb-1">{t.accommodation.checkout}</div>
            <div class="text-base">08h00 - 10h00</div>
          </div>
        </div>
      </div>

      <!-- House Rules -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-warm-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <span class="text-2xl">üìã</span>
          </div>
          <h3 class="font-semibold text-lg text-forest-800">
            {t.accommodation.house_rules}
          </h3>
        </div>
        <div class="space-y-3 text-forest-700">
          <div class="flex items-center space-x-3">
            <span class="text-xl">üö≠</span>
            <span class="text-base">{t.accommodation.non_smoking}</span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-xl">üêæ</span>
            <span class="text-base">{t.accommodation.no_pets}</span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-xl">üéâ</span>
            <span class="text-base">{t.accommodation.no_parties}</span>
          </div>
        </div>
      </div>

      <!-- Eco Construction -->
      <div class="bg-white rounded-xl p-6 border border-sage-200 shadow-soft">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-forest-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <span class="text-2xl">üå±</span>
          </div>
          <h3 class="font-semibold text-lg text-forest-800">
            {t.accommodation.ecology_title}
          </h3>
        </div>
        <div class="space-y-3 text-forest-700">
          <div class="flex items-center space-x-3">
            <span class="text-lg text-forest-600">‚úì</span>
            <span class="text-base">{t.accommodation.self_built}</span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-lg text-forest-600">‚úì</span>
            <span class="text-base">{t.accommodation.organic_materials}</span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-lg text-forest-600">‚úì</span>
            <span class="text-base">{t.accommodation.phytopurification}</span>
          </div>
          <div class="flex items-center space-x-3">
            <span class="text-lg text-forest-600">‚úì</span>
            <span class="text-base">{t.accommodation.led_lighting}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Special Note about Ducks -->
    <div class="bg-gradient-to-r from-warm-50 to-sage-50 rounded-xl p-6 border border-warm-200 mb-8 animate-on-scroll">
      <div class="flex items-start space-x-4">
        <span class="text-3xl">ü¶Ü</span>
        <div>
          <h4 class="font-semibold text-forest-800 mb-2">
            {t.accommodation.ducks_title}
          </h4>
          <p class="text-forest-700 text-sm leading-relaxed" set:html={t.accommodation.ducks_message}>
          </p>
        </div>
      </div>
    </div>

  </div>
</section>
