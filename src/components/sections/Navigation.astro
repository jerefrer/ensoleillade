---
import LanguageSwitcher from "../LanguageSwitcher.astro";
import { getTranslations } from "../../utils/i18n.js";

interface Props {
  locale: string;
  currentPath: string;
}

const { locale, currentPath } = Astro.props;
const t = getTranslations(locale);
---

<nav
  id="main-navigation"
  class="absolute top-0 left-0 right-0 z-50 bg-white/90 border-b border-white/20"
  data-nav-state="transparent"
>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo/Brand -->
      <a href="#" class="flex items-center space-x-3 group cursor-pointer">
        <div
          class="w-10 h-10 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
        >
          <img
            src="/logo.png"
            alt="L'Ensoleillade"
            class="w-full h-full object-contain"
          />
        </div>
        <div class="flex flex-col">
          <h1
            class="text-sm md:text-md lg:text-lg xl:text-xl font-serif font-bold text-forest-800 group-hover:text-sage-600 transition-colors duration-300"
          >
            L'Ensoleillade
          </h1>
          <span class="text-xs text-forest-600 opacity-75">
            {t.nav.tagline}
          </span>
        </div>
      </a>

      <!-- Desktop Navigation Links -->
      <div class="hidden lg:flex items-center gap-2 xl:gap-8">
        <a
          href="#accommodation"
          class="nav-link relative px-2 py-2 text-forest-700 hover:text-sage-600 font-medium transition-all duration-300 group"
        >
          <span class="relative z-10">{t.nav.accommodation}</span>
          <div
            class="absolute inset-0 bg-sage-100 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300 origin-center"
          >
          </div>
        </a>

        <a
          href="#amenities"
          class="nav-link relative px-2 py-2 text-forest-700 hover:text-sage-600 font-medium transition-all duration-300 group"
        >
          <span class="relative z-10">{t.nav.amenities}</span>
          <div
            class="absolute inset-0 bg-sage-100 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300 origin-center"
          >
          </div>
        </a>

        <a
          href="#location"
          class="nav-link relative px-2 py-2 text-forest-700 hover:text-sage-600 font-medium transition-all duration-300 group"
        >
          <span class="relative z-10">{t.nav.location}</span>
          <div
            class="absolute inset-0 bg-sage-100 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300 origin-center"
          >
          </div>
        </a>

        <a
          href="#activities"
          class="nav-link relative px-2 py-2 text-forest-700 hover:text-sage-600 font-medium transition-all duration-300 group"
        >
          <span class="relative z-10">{t.nav.activities}</span>
          <div
            class="absolute inset-0 bg-sage-100 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300 origin-center"
          >
          </div>
        </a>

        <a
          href="#availability"
          class="nav-link relative px-2 py-2 text-forest-700 hover:text-sage-600 font-medium transition-all duration-300 group"
        >
          <span class="relative z-10">{t.nav.availability}</span>
          <div
            class="absolute inset-0 bg-sage-100 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300 origin-center"
          >
          </div>
        </a>

        <!-- CTA Button -->
        <a
          href="#contact"
          class="ml-2 px-4 xl:px-6 py-2.5 bg-sage-gradient text-white rounded-lg font-semibold shadow-sage hover:shadow-lg hover:scale-105 transition-all duration-300"
        >
          {t.nav.contact}
        </a>
      </div>

      <!-- Right section: Language switcher + Mobile menu -->
      <div class="flex items-center space-x-4">
        <LanguageSwitcher locale={locale} currentPath={currentPath} />

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 rounded-lg bg-sage-100 text-sage-700 hover:bg-sage-200 transition-colors duration-300"
          aria-label="Toggle mobile menu"
        >
          <svg
            class="w-6 h-6 transition-transform duration-300"
            id="menu-icon"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            class="w-6 h-6 transition-transform duration-300 hidden"
            id="close-icon"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div
    id="mobile-menu"
    class="lg:hidden absolute top-full left-0 right-0 bg-white/95 border-b border-sage-200 shadow-lg transform -translate-y-full opacity-0 invisible transition-all duration-500 ease-out z-50"
  >
    <div class="px-4 py-6 space-y-4">
      <a
        href="#accommodation"
        class="block py-3 px-4 text-forest-700 hover:text-sage-600 hover:bg-sage-50 rounded-lg transition-all duration-300 font-medium"
      >
        {t.nav.accommodation}
      </a>
      <a
        href="#amenities"
        class="block py-3 px-4 text-forest-700 hover:text-sage-600 hover:bg-sage-50 rounded-lg transition-all duration-300 font-medium"
      >
        {t.nav.amenities}
      </a>
      <a
        href="#location"
        class="block py-3 px-4 text-forest-700 hover:text-sage-600 hover:bg-sage-50 rounded-lg transition-all duration-300 font-medium"
      >
        {t.nav.location}
      </a>
      <a
        href="#activities"
        class="block py-3 px-4 text-forest-700 hover:text-sage-600 hover:bg-sage-50 rounded-lg transition-all duration-300 font-medium"
      >
        {t.nav.activities}
      </a>
      <a
        href="#availability"
        class="block py-3 px-4 text-forest-700 hover:text-sage-600 hover:bg-sage-50 rounded-lg transition-all duration-300 font-medium"
      >
        {t.nav.availability}
      </a>
      <a
        href="#contact"
        class="block mt-4 py-3 px-4 bg-sage-gradient text-white text-center rounded-lg font-semibold shadow-sage hover:shadow-lg transition-all duration-300"
      >
        {t.nav.contact}
      </a>
    </div>
  </div>

  <div
    id="mobile-menu-overlay"
    class="lg:hidden fixed inset-0 z-40 bg-forest-900/20 opacity-0 pointer-events-none transition-opacity duration-500"
  >
  </div>
</nav>

<script>
  const MOBILE_MENU_TRANSITION_MS = 500;
  let preventImmediateReopen = false;
  let reopenTimeout: ReturnType<typeof setTimeout> | null = null;

  class ModernNavigation {
    nav: HTMLElement | null;
    navBg: HTMLElement | null;
    mobileButton: HTMLButtonElement | null;
    mobileMenu: HTMLElement | null;
    menuIcon: SVGSVGElement | null;
    closeIcon: SVGSVGElement | null;
    isMenuOpen: boolean;
    menuHideTimeout: ReturnType<typeof setTimeout> | null;
    menuShowTimeout: ReturnType<typeof setTimeout> | null;
    isMenuClosing: boolean;
    overlay: HTMLElement | null;

    constructor() {
      this.nav = document.getElementById("main-navigation");
      this.navBg = document.getElementById("nav-bg");
      this.mobileButton = document.getElementById(
        "mobile-menu-button"
      ) as HTMLButtonElement;
      this.mobileMenu = document.getElementById("mobile-menu");
      this.menuIcon = document.querySelector<SVGSVGElement>("#menu-icon");
      this.closeIcon = document.querySelector<SVGSVGElement>("#close-icon");
      this.overlay = document.getElementById("mobile-menu-overlay");
      this.isMenuOpen = false;
      this.menuHideTimeout = null;
      this.menuShowTimeout = null;
      this.isMenuClosing = false;

      this.init();
    }

    init() {
      this.setupScrollBehavior();
      this.setupMobileMenu();
      this.setupActiveLinks();
      this.setupLogoScroll();
    }

    setupLogoScroll() {
      // Get all links that should trigger smooth scroll
      const scrollLinks = document.querySelectorAll('a[href^="#"]');

      scrollLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          const href = link.getAttribute("href");

          if (!href || href === "#") {
            e.preventDefault();
            window.scrollTo({
              top: 0,
              behavior: "smooth",
            });
          } else {
            // Handle scroll to section
            const target = document.querySelector(href);
            if (target) {
              e.preventDefault();
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          }
        });
      });
    }

    setupScrollBehavior() {
      // No scroll behavior needed for non-sticky nav
    }

    setupMobileMenu() {
      if (!this.mobileButton || !this.mobileMenu) {
        return;
      }

      this.mobileButton.addEventListener("click", () => {
        if (!this.isMenuOpen && preventImmediateReopen) {
          return;
        }
        this.toggleMobileMenu();
      });

      // Close mobile menu when clicking on links
      this.mobileMenu.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", (event) => {
          if (this.isMenuClosing) {
            event.preventDefault();
            event.stopPropagation();
            return;
          }
          if (this.isMenuOpen) {
            this.closeMobileMenu();
          }
        });
      });

      if (this.overlay) {
        this.overlay.addEventListener("click", () => {
          if (this.isMenuOpen) {
            this.closeMobileMenu();
          }
        });
      }

      // Close menu when clicking outside
      document.addEventListener("click", (e) => {
        if (
          this.isMenuOpen &&
          this.nav &&
          e.target instanceof Node &&
          !this.nav.contains(e.target)
        ) {
          this.closeMobileMenu();
        }
      });
    }

    toggleMobileMenu() {
      if (this.isMenuOpen) {
        this.closeMobileMenu();
      } else {
        this.openMobileMenu();
      }
    }

    openMobileMenu() {
      if (
        !this.mobileMenu ||
        !this.menuIcon ||
        !this.closeIcon ||
        !this.mobileButton
      ) {
        return;
      }
      if (this.menuHideTimeout) {
        clearTimeout(this.menuHideTimeout);
        this.menuHideTimeout = null;
      }
      if (this.menuShowTimeout) {
        clearTimeout(this.menuShowTimeout);
        this.menuShowTimeout = null;
      }
      this.isMenuOpen = true;
      this.isMenuClosing = false;
      this.setMenuInteractivity(false);
      this.mobileMenu.classList.remove(
        "invisible",
        "-translate-y-full",
        "opacity-0"
      );
      this.mobileMenu.classList.add("translate-y-0", "opacity-100");
      this.menuIcon.classList.add("hidden");
      this.closeIcon.classList.remove("hidden");
      this.mobileButton.setAttribute("aria-expanded", "true");
      this.showOverlay();
      this.menuShowTimeout = setTimeout(() => {
        this.setMenuInteractivity(true);
        this.menuShowTimeout = null;
      }, MOBILE_MENU_TRANSITION_MS);

      // Prevent nav from hiding when menu is open
      if (this.nav) {
        this.nav.style.transform = "translateY(0)";
      }
    }

    closeMobileMenu() {
      if (
        !this.mobileMenu ||
        !this.menuIcon ||
        !this.closeIcon ||
        !this.mobileButton
      ) {
        return;
      }
      if (!this.isMenuOpen) {
        return;
      }
      if (this.menuShowTimeout) {
        clearTimeout(this.menuShowTimeout);
        this.menuShowTimeout = null;
      }
      this.isMenuClosing = true;
      this.setMenuInteractivity(false);
      this.isMenuOpen = false;
      this.mobileMenu.classList.add("-translate-y-full", "opacity-0");
      this.mobileMenu.classList.remove("translate-y-0", "opacity-100");
      this.menuIcon.classList.remove("hidden");
      this.closeIcon.classList.add("hidden");
      this.mobileButton.setAttribute("aria-expanded", "false");
      startReopenCooldown();
      this.scheduleMenuHide();
    }

    scheduleMenuHide() {
      if (this.menuHideTimeout) {
        clearTimeout(this.menuHideTimeout);
      }
      this.menuHideTimeout = setTimeout(() => {
        if (this.mobileMenu) {
          this.mobileMenu.classList.add("invisible");
        }
        this.isMenuClosing = false;
        this.menuHideTimeout = null;
        this.hideOverlay();
      }, MOBILE_MENU_TRANSITION_MS);
    }

    showOverlay() {
      if (!this.overlay) {
        return;
      }
      this.overlay.classList.remove("opacity-0");
      this.overlay.classList.add("opacity-100");
      this.overlay.style.pointerEvents = "auto";
    }

    hideOverlay() {
      if (!this.overlay) {
        return;
      }
      this.overlay.classList.remove("opacity-100");
      this.overlay.classList.add("opacity-0");
      this.overlay.style.pointerEvents = "none";
    }

    setMenuInteractivity(isEnabled: boolean) {
      if (!this.mobileMenu) {
        return;
      }
      this.mobileMenu.style.pointerEvents = isEnabled ? "auto" : "none";
    }

    setupActiveLinks() {
      const sections = document.querySelectorAll("section[id]");
      const navLinks = document.querySelectorAll(".nav-link");

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const id = entry.target.getAttribute("id");

              // Remove active class from all links
              navLinks.forEach((link) => {
                link.classList.remove("text-sage-600", "bg-sage-100");
              });

              // Add active class to current link
              const activeLink = document.querySelector(`a[href="#${id}"]`);
              if (activeLink && activeLink.classList.contains("nav-link")) {
                activeLink.classList.add("text-sage-600");
                const highlight = activeLink.querySelector("div");
                if (highlight) {
                  highlight.classList.add("scale-100");
                }
              }
            }
          });
        },
        {
          threshold: 0.3,
          rootMargin: "-20% 0px -70% 0px",
        }
      );

      sections.forEach((section) => {
        observer.observe(section);
      });
    }
  }

  const startReopenCooldown = () => {
    preventImmediateReopen = true;
    if (reopenTimeout) {
      clearTimeout(reopenTimeout);
    }
    reopenTimeout = setTimeout(() => {
      preventImmediateReopen = false;
      reopenTimeout = null;
    }, MOBILE_MENU_TRANSITION_MS);
  };

  // Initialize navigation when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    new ModernNavigation();
  });
</script>
