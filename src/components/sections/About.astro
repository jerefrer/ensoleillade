---
import images from "../../data/images.yml";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Modern Story-Driven About Section -->
<section id="about" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-sage-50 via-white to-warm-50"
  >
  </div>
  <div
    class="absolute top-0 right-0 w-96 h-96 bg-sage-500/10 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-80 h-80 bg-warm-500/10 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
        set:html={t.about.title}
      />
      <p
        class="text-xl text-sage-600 max-w-xl mx-auto leading-relaxed"
        set:html={t.about.description}
      />
    </div>

    <!-- Story Grid Layout -->
    <div class="grid lg:grid-cols-12 gap-8 items-center">
      <!-- Left Content Column -->
      <div class="lg:col-span-7 space-y-12">
        <!-- Feature Story Cards -->
        <div class="space-y-8 animate-on-scroll">
          <!-- Eco Construction Card -->
          <div class="flex items-start space-x-6 group">
            <div
              class="flex-shrink-0 w-16 h-16 bg-sage-gradient rounded-2xl flex items-center justify-center shadow-sage group-hover:scale-110 transition-transform duration-300"
            >
              <span class="text-white text-2xl">üåø</span>
            </div>
            <div class="flex-1">
              <h3
                class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-sage-600 transition-colors"
              >
                {t.about.features.eco}
              </h3>
              <p class="text-forest-700 leading-relaxed">
                {
                  locale === "fr"
                    ? "Construction respectueuse avec des mat√©riaux naturels et locaux, dans un esprit de d√©veloppement durable."
                    : "Respectful construction with natural and local materials, in a spirit of sustainable development."
                }
              </p>
            </div>
          </div>

          <!-- Local Wood Card -->
          <div class="flex items-start space-x-6 group">
            <div
              class="flex-shrink-0 w-16 h-16 bg-warm-gradient rounded-2xl flex items-center justify-center shadow-warm group-hover:scale-110 transition-transform duration-300"
            >
              <span class="text-white text-2xl">ü™µ</span>
            </div>
            <div class="flex-1">
              <h3
                class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-sage-600 transition-colors"
              >
                {t.about.features.wood}
              </h3>
              <p class="text-forest-700 leading-relaxed">
                {
                  locale === "fr"
                    ? "Isolation en laine de bois dense et bardage en bois local, pour un confort thermique optimal."
                    : "Dense wood wool insulation and local wood cladding for optimal thermal comfort."
                }
              </p>
            </div>
          </div>

          <!-- Phyto-purification Card -->
          <div class="flex items-start space-x-6 group">
            <div
              class="flex-shrink-0 w-16 h-16 bg-forest-gradient rounded-2xl flex items-center justify-center shadow-medium group-hover:scale-110 transition-transform duration-300"
            >
              <span class="text-white text-2xl">üíß</span>
            </div>
            <div class="flex-1">
              <h3
                class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-sage-600 transition-colors"
              >
                {t.about.features.phyto}
              </h3>
              <p class="text-forest-700 leading-relaxed">
                {
                  locale === "fr"
                    ? "Traitement naturel des eaux us√©es par phyto-√©puration, pour un impact environnemental minimal."
                    : "Natural wastewater treatment by phyto-purification for minimal environmental impact."
                }
              </p>
            </div>
          </div>
        </div>

        <!-- Association Partnership -->
        <div
          class="bg-gradient-to-r from-sage-50 to-warm-50 rounded-2xl p-8 border border-sage-200 animate-on-scroll card-hover"
        >
          <div class="flex items-center space-x-4 mb-6">
            <img
              src="/logo-asso.jpg"
              alt="Association Lumi√®re dans le Corps"
              class="w-32 h-auto rounded-2xl border border-sage-200 shadow-sm"
            />
            <div>
              <h3 class="text-2xl font-semibold text-forest-800 mb-2">
                {
                  locale === "fr"
                    ? "Association Lumi√®re dans le Corps"
                    : "Lumi√®re dans le Corps Association"
                }
              </h3>
              <p class="text-sage-600 font-medium">
                {
                  locale === "fr"
                    ? "Biodiversit√© en permaculture"
                    : "Biodiversity in permaculture"
                }
              </p>
            </div>
          </div>
          <div class="bg-white/80 rounded-xl p-6 backdrop-blur-sm">
            <p class="text-forest-700 leading-relaxed">
              {
                locale === "fr"
                  ? "Votre s√©jour contribue directement au d√©veloppement de notre association de permaculture, qui ≈ìuvre pour la biodiversit√© et l'agriculture durable."
                  : "Your stay directly contributes to the development of our permaculture association, which works for biodiversity and sustainable agriculture."
              }
            </p>
          </div>
        </div>
      </div>

      <!-- Right Visual Column -->
      <div class="lg:col-span-5 animate-on-scroll" data-delay="300">
        <!-- Main Feature Image -->
        <div class="relative mb-8">
          <div class="aspect-[4/5] rounded-2xl overflow-hidden shadow-large">
            <img
              src={images.about.feature}
              alt={locale === "fr"
                ? "Construction √©cologique du g√Æte"
                : "Eco-friendly cottage construction"}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
