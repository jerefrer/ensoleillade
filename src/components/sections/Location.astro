---
import images from "../../data/images.yml";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Modern Location & Activities Section -->
<section id="location" class="relative py-32 overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-forest-50 via-white to-earth-50"
  >
  </div>
  <div
    class="absolute top-0 right-1/4 w-96 h-96 bg-forest-300/10 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-1/3 w-80 h-80 bg-earth-300/10 rounded-full blur-3xl"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2
        class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-6"
      >
        {t.location.title}
      </h2>
      <p class="text-lg text-forest-700 max-w-xl mx-auto leading-relaxed">
        {t.location.description}
      </p>
    </div>

    <!-- Location Highlight -->
    <div
      class="bg-gradient-to-r from-sage-50 via-white to-forest-50 rounded-2xl p-8 border border-sage-200 shadow-large mb-20 animate-on-scroll"
    >
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <!-- Location Info -->
        <div>
          <div class="flex items-center space-x-4 mb-6">
            <div
              class="w-16 h-16 rounded-2xl flex items-center justify-center shadow-medium"
              style="background-color: #efce44;"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-forest-800">
                L'Ensoleillade
              </h3>
              <p class="text-sage-600 font-medium">
                {t.location.subtitle}
              </p>
            </div>
          </div>

          <div class="space-y-4 pl-6">
            <div class="flex items-center space-x-4">
              <span class="text-sage-600 text-xl">üöó</span>
              <span class="text-forest-700">
                {
                  locale === "fr"
                    ? "2h30 depuis Bordeaux"
                    : "2h30 from Bordeaux"
                }
              </span>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-sage-600 text-xl">‚úàÔ∏è</span>
              <span class="text-forest-700">
                {
                  locale === "fr"
                    ? "1h depuis Paris (Bergerac)"
                    : "1h from Paris (Bergerac)"
                }
              </span>
            </div>
            <div class="flex items-start space-x-4">
              <span class="text-sage-600 text-xl mt-1">üöâ</span>
              <div class="text-forest-700">
                <div class="font-medium">{t.location.nearest_station}</div>
                <div class="text-sm">{t.location.station_name}</div>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-sage-600 text-xl">üöï</span>
              <span class="text-forest-700">
                {t.location.pickup_service}
              </span>
            </div>
          </div>
        </div>

        <!-- Google Map -->
        <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-large">
          <iframe
            src={t.location.map_url}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title={locale === "fr" ? "Carte de localisation" : "Location map"}
          ></iframe>
        </div>
      </div>
    </div>

    <!-- Activities Showcase -->
    <div class="mb-20">
      <div class="text-center mb-12 animate-on-scroll">
        <h3 class="text-3xl font-serif font-bold text-forest-800 mb-4">
          {
            locale === "fr"
              ? "Activit√©s & D√©couvertes"
              : "Activities & Discoveries"
          }
        </h3>
        <p class="text-lg text-sage-600 max-w-2xl mx-auto">
          {
            locale === "fr"
              ? "Une r√©gion riche en histoire, culture et aventures naturelles"
              : "A region rich in history, culture and natural adventures"
          }
        </p>
      </div>

      <!-- Featured Activities Grid -->
      <div
        class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12 animate-on-scroll"
      >
        <!-- Lascaux Caves -->
        <div class="group">
          <div
            class="relative bg-gradient-to-br from-white via-sage-50/50 to-transparent rounded-2xl p-6 border border-sage-200 shadow-soft card-hover"
          >
            <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
              <img
                src={images.location.lascaux}
                alt={t.location.lascaux_alt}
                class="w-full h-full object-cover"
              />
            </div>

            <h4
              class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-sage-600 transition-colors"
            >
              {t.location.lascaux_alt}
            </h4>
            <p class="text-forest-600 text-sm">
              {t.location.lascaux_desc}
            </p>
          </div>
        </div>

        <!-- Canoeing -->
        <div class="group">
          <div
            class="relative bg-gradient-to-br from-white via-warm-50/50 to-transparent rounded-2xl p-6 border border-warm-200 shadow-soft card-hover"
          >
            <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
              <img
                src={images.location.canoeing}
                alt={t.location.canoeing_alt}
                class="w-full h-full object-cover"
              />
            </div>

            <h4
              class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-warm-600 transition-colors"
            >
              {t.location.canoeing_alt}
            </h4>
            <p class="text-forest-600 text-sm">
              {t.location.canoeing_desc}
            </p>
          </div>
        </div>

        <!-- Castles & Gardens -->
        <div class="group">
          <div
            class="relative bg-gradient-to-br from-white via-forest-50/50 to-transparent rounded-2xl p-6 border border-forest-200 shadow-soft card-hover"
          >
            <div class="aspect-[4/3] rounded-xl mb-4 overflow-hidden">
              <img
                src={images.location.castles}
                alt={t.location.castles_alt}
                class="w-full h-full object-cover"
              />
            </div>

            <h4
              class="text-xl font-semibold text-forest-800 mb-2 group-hover:text-forest-600 transition-colors"
            >
              {t.location.castles_alt}
            </h4>
            <p class="text-forest-600 text-sm">
              {t.location.castles_desc}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
