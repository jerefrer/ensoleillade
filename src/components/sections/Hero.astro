---
import images from "../../cms-content/images.json";

interface Props {
  locale: string;
  t: any;
}

const { locale, t } = Astro.props as Props;
---

<!-- Modern Split-Screen Hero Section -->
<section class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background Organic Shapes -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-sage-500/20 rounded-full blur-3xl animate-pulse-soft"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-80 h-80 bg-warm-500/20 rounded-full blur-3xl animate-pulse-soft"
      style="animation-delay: 1s;"
    >
    </div>
  </div>

  <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center min-h-screen mt-6 py-20"
    >
      <!-- Left Content Column -->
      <div class="space-y-8 animate-on-scroll">
        <!-- Association Header - PROMINENT -->
        <div class="space-y-6">
          <div
            class="flex flex-col md:flex-row items-center md:items-center gap-6"
          >
            <img
              src="/logo-asso.jpg"
              alt="Association Lumi√®re dans le Corps"
              class="w-40 h-auto rounded-2xl border-2 border-sage-300 shadow-lg"
            />
            <div class="text-center md:text-left">
              <h1
                class="text-2xl xl:text-3xl font-serif font-bold text-forest-800 leading-tight"
              >
                {
                  locale === "fr"
                    ? "Association Lumi√®re dans le Corps"
                    : "Lumi√®re dans le Corps Association"
                }
              </h1>
              <p class="text-lg md:text-xl text-sage-600 font-medium mt-2">
                {
                  locale === "fr"
                    ? "Biodiversit√© en permaculture"
                    : "Biodiversity in permaculture"
                }
              </p>
            </div>
          </div>
        </div>

        <!-- Rental Name - Secondary -->
        <div
          class="space-y-3 pt-6 border-t border-sage-200 text-center md:text-left"
        >
          <h2
            class="text-2xl lg:text-4xl font-serif font-semibold text-forest-700 leading-tight"
          >
            L'Ensoleillade
          </h2>
          <p class="text-base lg:text-lg text-sage-600">
            {t.hero.subtitle}
          </p>
        </div>

        <!-- Description -->
        <p class="text-lg text-forest-700 leading-relaxed max-w-xl">
          {t.hero.description}
        </p>

        <!-- Feature Highlights -->
        <div class="flex flex-wrap gap-4 max-w-3xl">
          <div class="flex items-center space-x-3">
            <div
              class="w-10 h-10 bg-sage-100 rounded-lg flex items-center justify-center"
            >
              <span class="text-sage-600 text-lg">üè†</span>
            </div>
            <div>
              <div class="font-semibold text-forest-800">19m¬≤</div>
              <div class="text-sm text-forest-600">
                {locale === "fr" ? "Int√©rieur" : "Interior"}
              </div>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <div
              class="w-10 h-10 bg-warm-100 rounded-lg flex items-center justify-center"
            >
              <span class="text-warm-600 text-lg">üåø</span>
            </div>
            <div>
              <div class="font-semibold text-forest-800">18m¬≤</div>
              <div class="text-sm text-forest-600">
                {locale === "fr" ? "Terrasse" : "Terrace"}
              </div>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <div
              class="w-10 h-10 bg-warm-100 rounded-lg flex items-center justify-center"
            >
              <span class="text-warm-600 text-lg">üë•</span>
            </div>
            <div>
              <div class="font-semibold text-forest-800">
                {locale === "fr" ? "1-2 personnes" : "1-2 people"}
              </div>
              <div class="text-sm text-forest-600">
                {locale === "fr" ? "Capacit√©" : "Capacity"}
              </div>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <div
              class="w-10 h-10 bg-forest-100 rounded-lg flex items-center justify-center"
            >
              <span class="text-forest-600 text-lg">üóìÔ∏è</span>
            </div>
            <div>
              <div class="font-semibold text-forest-800">
                {t.accommodation.minimum_nights_short}
              </div>
              <div class="text-sm text-forest-600">
                {locale === "fr" ? "Minimum" : "Minimum"}
              </div>
            </div>
          </div>
        </div>

        <!-- Badges Section -->
        <div class="flex flex-col gap-3">
          <!-- Pricing Badge -->
          <div>
            <div
              class="inline-block px-6 py-3 bg-blue-50/80 backdrop-blur-sm border-2 border-blue-200 rounded-xl shadow-sm"
            >
              <span class="font-semibold text-blue-900">
                {t.pricing.price_per_night}
              </span>
              <span
                class="text-xs text-blue-700/80 font-medium ml-1 align-baseline"
              >
                {t.pricing.price_note}
              </span>
              <span class="text-sm text-blue-600/70 pl-1">
                {t.pricing.tourist_tax}</span
              >
            </div>
          </div>

          <!-- Ch√®que Vacances Badge -->
          <div>
            <div
              class="inline-flex items-center px-5 py-3 bg-gradient-to-r from-blue-50 to-blue-100 border-2 border-blue-200 rounded-xl shadow-sm"
            >
              <div class="w-16 h-12 mr-3 flex items-center justify-center">
                <img
                  src="/cheque-vacance-logo.webp"
                  alt="ANCV Ch√®ques Vacances"
                  class="w-full object-contain rounded"
                />
              </div>
              <div>
                <div class="font-bold text-blue-900 text-sm">
                  {
                    locale === "fr"
                      ? "Ch√®ques Vacances ANCV"
                      : "ANCV Holiday Vouchers"
                  }
                </div>
                <div class="text-xs text-blue-700">
                  {locale === "fr" ? "Accept√©s" : "Accepted"}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-sage-gradient text-white rounded-xl font-semibold shadow-sage hover:shadow-lg hover:scale-105 transition-all duration-300"
          >
            <span>{t.hero.cta}</span>
            <svg
              class="ml-2 w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>

          <a
            href="#availability"
            class="inline-flex items-center justify-center px-8 py-4 bg-white border-2 border-sage-300 text-sage-700 rounded-xl font-semibold hover:bg-sage-50 hover:border-sage-400 transition-all duration-300"
          >
            <svg
              class="mr-2 w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            <span>{locale === "fr" ? "Disponibilit√©s" : "Availability"}</span>
          </a>
        </div>

        <!-- Trust Indicators -->
        <div
          class="flex items-center space-x-6 pt-6 border-t border-sage-200/50"
        >
          <div class="flex items-center space-x-2">
            <div class="flex -space-x-1">
              <div
                class="w-8 h-8 bg-sage-200 rounded-full border-2 border-white flex items-center justify-center"
              >
                <span class="text-xs">‚≠ê</span>
              </div>
              <div
                class="w-8 h-8 bg-sage-300 rounded-full border-2 border-white flex items-center justify-center"
              >
                <span class="text-xs">‚≠ê</span>
              </div>
              <div
                class="w-8 h-8 bg-sage-400 rounded-full border-2 border-white flex items-center justify-center"
              >
                <span class="text-xs">‚≠ê</span>
              </div>
            </div>
            <span class="text-sm text-forest-600">
              {locale === "fr" ? "Clients satisfaits" : "Happy guests"}
            </span>
          </div>

          <div class="h-6 w-px bg-sage-200"></div>

          <div class="flex items-center space-x-2">
            <span class="text-2xl">üå±</span>
            <span class="text-sm text-forest-600">
              {
                locale === "fr"
                  ? "Soutient la permaculture"
                  : "Supports permaculture"
              }
            </span>
          </div>
        </div>
      </div>

      <!-- Right Image Column -->
      <div class="relative lg:h-[80vh] animate-on-scroll" data-delay="200">
        <!-- Main Property Image -->
        <div
          class="relative h-96 lg:h-full rounded-2xl overflow-hidden shadow-large"
        >
          <img
            src={images.hero.primary}
            alt={locale === "fr"
              ? images.hero.primary_alt.fr
              : images.hero.primary_alt.en}
            class="w-full h-full object-cover"
            style="object-position: 70%;"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
