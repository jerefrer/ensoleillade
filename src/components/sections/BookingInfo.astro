            {t.amenities.basic_services.towels_price}
          </div>
        </div>
      </div>

      <!-- Holiday Insurance -->
      <div
        class="flex items-start space-x-4 p-6 bg-white rounded-xl border border-sage-200 shadow-soft"
      >
        <div
