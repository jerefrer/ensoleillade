---
import images from "../../cms-content/images.json";

interface Props {
  t: any;
  locale: string;
}
const { t, locale } = Astro.props as Props;
---

<!-- Garden Section -->
<section id="garden" class="relative py-24 bg-gradient-to-br from-sage-50 via-white to-warm-50">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Title -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl lg:text-5xl font-serif font-bold text-forest-800 mb-4">
        {t.garden.title}
      </h2>
    </div>

    <!-- Main Garden Gallery - 3 images without legends -->
    <div class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          images.garden.main_gallery.map((image_path) => (
            <div class="flex justify-center items-end">
              <img
                src={image_path}
                alt={t.garden.title}
                class="rounded-xl shadow-soft w-full h-auto max-h-[500px] object-cover object-center"
                style="aspect-ratio: auto;"
              />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Friends Section -->
    <div>
      <div class="text-center mb-12 animate-on-scroll">
        <h3 class="text-3xl lg:text-4xl font-serif font-bold text-forest-800">
          {t.garden.friends_title}
        </h3>
      </div>

      <!-- First row: 3 images -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        {
          images.garden.friends_gallery.slice(0, 3).map((item) => (
            <div class="flex flex-col items-center">
              <img
                src={item.image}
                alt={item.legend ? (locale === "fr" ? item.legend.fr : item.legend.en) : ""}
                class="rounded-xl shadow-soft w-full h-auto max-h-[500px] object-cover object-center"
                style="aspect-ratio: auto;"
              />
              {item.legend && (
                <p class="text-center text-forest-700 font-medium mt-4 text-base md:text-lg">
                  {locale === "fr" ? item.legend.fr : item.legend.en}
                </p>
              )}
            </div>
          ))
        }
      </div>

      <!-- Second row: 3 images -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          images.garden.friends_gallery.slice(3, 6).map((item) => (
            <div class="flex flex-col items-center">
              <img
                src={item.image}
                alt={item.legend ? (locale === "fr" ? item.legend.fr : item.legend.en) : ""}
                class="rounded-xl shadow-soft w-full h-auto max-h-[500px] object-cover object-center"
                style="aspect-ratio: auto;"
              />
              {item.legend && (
                <p class="text-center text-forest-700 font-medium mt-4 text-base md:text-lg">
                  {locale === "fr" ? item.legend.fr : item.legend.en}
                </p>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
